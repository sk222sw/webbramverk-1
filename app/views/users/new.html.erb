<% if @user.errors.any? %>
    <div id="error_messages">
        <h2>Error: </h2>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @user do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>        

    <div>
        <%= f.submit "Register", class: "button button-primary" %>
    </div>
    
<% end %>