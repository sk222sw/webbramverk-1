<h2>log in</h2>

<div class="row">
    <div class="one-third columns">&nbsp;</div>
    <div class="one-third columns">
        <%= form_for(:session, url: login_path) do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email %>
        
          <%= f.label :password %>
          <%= f.password_field :password, required: true %>          
        
          <%= f.submit "Log in" %>
        <% end %>
        or
        <%= link_to "Register", new_user_path, class: "button button-primary" %>
    </div>
    <div class="one-third columns">&nbsp;</div>
</div>